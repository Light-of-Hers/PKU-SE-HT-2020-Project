<!--pages/UserPage/UserPage.wxml-->
<view>
    <view class = "icon-img">
      <image style = "height: 150rpx; width: 125rpx;"
            src = "icon.png"/>
    </view>
    <view class = "showtext1">
      <text> 你好，{{Myname}}</text>
    </view>
    <view>
        <!-- <text>导入Credential</text> -->
        <input class = "input"
            bindinput="bindname"
            bindconfirm="rename"
            confirm-type="done" 
            placeholder="新昵称:" />
        <button class = "btn1" bindtap="rename">修改昵称</button>
    </view>
    <view class = "showtext">
      <text>账户信息：\n </text>
      <text>Credential： {{Mycre.credential}}\n</text>
      <text>PublicKey:  {{Mycre.PublicKey}}\n</text>
      <text>PrivateKey： {{Mycre.PrivateKey}}\n</text>
    </view>
    <view>
        <button class = "btn2" bindtap="logout">登出</button>
    </view>
    <view class = "btn-wrap">
      <button class = "btn1" bindtap="ScanCode">扫码验证</button>
    </view>
</view>

