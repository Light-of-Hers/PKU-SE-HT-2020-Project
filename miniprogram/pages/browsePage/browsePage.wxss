page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.container {
    flex-wrap: wrap;
    /* background: #efeff4; */
    font-family: 'Fira Code', 'Mononoki', 'Consolas', 'Arial';
    display: flex;
    display: -webkit-flex;
    box-sizing: border-box;
}

.col {
    width: 26%;
    padding-top: 33%;
    margin: 25rpx 3.666666%;
    position: relative;
}

.item {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    overflow: hidden;
    position: absolute;
    box-sizing: border-box;
    top: 0;
    display: flex;
    flex-direction: column;
}

.item .icon {
    flex: 1;
}

.item .icon, .item .bottom {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
}

.item .bottom {
    height: 80rpx;
    font-size: 22rpx;
}

.item .txt {
    flex: 1;
    text-align: center;
}

.item .bottom .txt {
    color: black;
    font-size: 30rpx;
}

.item image {
    width: 120rpx;
    height: 120rpx;
}