.container {
  margin-bottom: 90rpx;
}

.text-container {
  margin: 20rpx;
  padding: 30rpx;
  line-height: 50rpx;
  overflow-wrap: break-word;
}

.image-container {
  display: flex;
  margin: 20rpx;
}

.loading {
  text-align: center;
}

.time-stamp {
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
  /*background-color: #e0e0e0;*/
  text-align: center;
}

.under {
  padding: 20rpx;
  border-top:1px solid #e0e0e0;
  display: flex;
  align-items: center;
  text-align: left;
}

.under image{
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
}
.under text{
  flex: 1;
  font-size: 40rpx;
  color: #e0e0e0;
}
.no-version {
  height: 1000rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.no-version image{
  width: 200rpx;
  height: 200rpx;
}

.footer {
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  display: flex;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.edit {
  padding: 20rpx;
  flex: 1;
  display: flex;
  border-radius: 50rpx;
  background-color: #c2ced9;
  justify-content: center;
  color: rgb(71, 69, 69);
}

.edit-hover {
  background-color: rgb(129, 137, 150);
}