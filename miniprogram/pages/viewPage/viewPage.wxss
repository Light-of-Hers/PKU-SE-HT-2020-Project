.container {
  margin-bottom: 150rpx;
}

.text-container {
  margin: 20rpx;
  padding: 10rpx;
  line-height: 50rpx;
  overflow-wrap: break-word;
}

.image-container {
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.loading {
  text-align: center;
}

.time-stamp {
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
  /*background-color: #e0e0e0;*/
  text-align: center;
}

.under {
  padding: 20rpx;
  border-top:1px solid #e0e0e0;
  display: flex;
  flex-direction: column;
}

.item {
  display: flex;
  align-items: center;
  text-align: left;
  margin-bottom: 20rpx;
}

.item image{
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
}
.item text{
  flex: 1;
  font-size: 35rpx;
  color: #1a238d;
}
.no-version {
  height: 1000rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.no-version image{
  width: 200rpx;
  height: 200rpx;
}

.footer {
  position: fixed;
  width: 100%;
  height: 150rpx;
  bottom: 0;
  display: flex;
}

.footer image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 5rpx;
}

.footer text {
  font-size: 30rpx;
}
.edit {
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #c2ced9;
  color: rgb(71, 69, 69);
}

.edit-hover text{
  color: #4195f6;
}